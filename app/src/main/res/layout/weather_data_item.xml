<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    android:layout_marginHorizontal="4dp"
    android:background="@drawable/bg_text_view"
    android:elevation="4dp"
    android:orientation="vertical"
    android:padding="8dp">

    <TextView
        android:id="@+id/topraginNemi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:text="Toprağın Nemi: "
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/topraginSicakligi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:text="Toprağın Sıcaklığı: "
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/havaninNemi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:text="Havanın Nemi: "
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/havaninSicakligi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:text="Havanin Sıcaklığı: "
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/ruzgarDurumuYonu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:text="Rüzgar Durumu Yönü: "
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/ruzgarHizi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:text="Rüzgar Hızı: "
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tarih"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:text="Tarih: "
        android:textSize="14sp"
        android:textStyle="bold" />

</androidx.appcompat.widget.LinearLayoutCompat>